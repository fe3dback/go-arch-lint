{{- /* gotype: github.com/fe3dback/go-arch-lint/v4/internal/models.CmdStdoutErrorOut*/ -}}

{{- if .OverallNote -}}
	{{ .OverallNote -}}:
{{ end -}}

{{ $count := (.Errors | len) -}}
{{ $space := " " -}}

{{ range .Errors }}

	{{- if gt $count 1 }}
		{{ "  #]" | colorize "red" }} {{ $space = "     . "}}
	{{- end -}}

	{{ concat .Message ":" | colorize "yellow" }}

	{{ if .Reference.Valid -}}
		{{ concat $space "at " .Reference.File ":" .Reference.Line | colorize "gray" }}
		{{ " "}}
		{{ .CodePreview | linePrefix $space }}
	{{ end }}

{{ end -}}